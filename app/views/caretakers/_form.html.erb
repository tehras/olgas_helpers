
<div class='edit-window'>
<%= simple_form_for @caretaker, :url => {:action => 'create'} do |f| %>
<%= f.error_notification %>
<h4 class="expanderHead"><span class="expanderSign" style="cursor:pointer;">[+]</span> Update My Information</h4>
<div class='expanderContent'>
    <div class="form-inputs">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :age %>
      <%= f.input :nationality %>
      <%= f.input :comment %>
      <%= f.input :citizen %>
      <%= f.input :car %>
      <%= f.input :driver_license %>
      <%= f.input :english %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
</div>
<% end %>
</div>